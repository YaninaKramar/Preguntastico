<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Partida</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(to bottom, #a8e6ce, #ffffff);
            min-height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
            text-align: center;
            padding: 20px;
        }

        .pregunta-container {
            background-color: #9f4c2a;
            border-radius: 20px;
            padding: 20px;
            max-width: 700px;
            margin: auto;
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
            color: white;
        }

        .categoria {
            background-color: #ff6f20;
            border-radius: 20px 20px 0 0;
            padding: 10px;
            font-weight: bold;
            font-size: 30px;
            color: black;
        }

        .pregunta {
            background-color: white;
            color: black;
            margin: 20px 0;
            padding: 20px;
            border-radius: 15px;
            font-size: 18px;
        }

        .opcion {
            background-color: white;
            color: black;
            margin: 10px;
            padding: 10px;
            border-radius: 20px;
            cursor: pointer;
            transition: all 0.2s ease-in-out;
            border: none;
            width: 100%;
            max-width: 300px;
        }

        .opcion:hover {
            background-color: #dcdcdc;
        }

        .boton-volver {
            position: absolute;
            left: 20px;
            top: 20px;
            background-color: #003b5c;
            color: white;
            border-radius: 20px;
            padding: 10px 20px;
            font-weight: bold;
            text-decoration: none;
            display: inline-block;
        }

        .tiempo {
            font-size: 30px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .reportar-btn {
            background-color: red;
            color: white;
            border: none;
            font-size: 12px;
            padding: 5px 10px;
            border-radius: 10px;
            float: right;
            margin-top: -40px;
            margin-right: 10px;
        }

        .opcion-correcta {
            background-color: #28a745 !important;
            color: white;
        }

        .opcion-incorrecta {
            background-color: red !important;
            color: white;
        }

    </style>
</head>
<body>

<a href="lobbyView.mustache" class="boton-volver">Volver al lobby</a>

<div class="tiempo">Tiempo restante: 10s</div>

<div class="pregunta-container">
    <div class="categoria" style="color: {{categoria_color}};">{{categoria_nombre}}</div>

    <button class="reportar-btn">Reportar Pregunta</button>

    <div class="pregunta">{{pregunta}}</div>

    <form method="post" action="index.php?controller=partida&method=responderPregunta" id="formularioPregunta">

    <input type="hidden" name="partida_id" value="{{partida_id}}">
        <input type="hidden" name="pregunta_id" value="{{pregunta_id}}">
        <input type="hidden" name="respuesta" id="respuestaInput" value="">

    <div class="d-flex flex-wrap justify-content-center">
        {{#opciones}}
            <button class="opcion" type="button" value="{{numero}}" data-es_correcta="{{es_correcta}}">
                {{texto}}
            </button>
        {{/opciones}}
    </div>
    </form>
</div>

<script>

    let tiempoRestante = 10;
    const tiempoElemento = document.querySelector('.tiempo');

    const intervalo = setInterval(() => {
        tiempoRestante--;
        tiempoElemento.textContent = 'Tiempo restante: ' + tiempoRestante + 's';

        if (tiempoRestante <= 0) {
            clearInterval(intervalo);

            // Si el contador llega a 0, agarro una opcion incorrecta y submiteo el form con esa opcion, para que el jugador pierda
            const incorrecta = document.querySelector('.opcion[data-es_correcta="0"]');

            if (incorrecta) {
                document.getElementById('respuestaInput').value = incorrecta.value;
                document.getElementById('formularioPregunta').submit();
            } else {
                console.error('No se encontró opción incorrecta');
            }
        }
    }, 1000);

    const botones = document.querySelectorAll('.opcion');
    const inputRespuesta = document.getElementById('respuestaInput');
    const formulario = document.getElementById('formularioPregunta');

    botones.forEach(boton => {
        boton.addEventListener('click', (e) => {
            e.preventDefault();

            // Evitar múltiples respuestas
            if (document.querySelector('.opcion[data-seleccionada]')) return;

            boton.setAttribute('data-seleccionada', 'true');

            const esCorrecta = Number(boton.getAttribute('data-es_correcta')) === 1;
            const numeroRespuesta = boton.getAttribute('value');

            // Cambiar color segun si es correcta o no
            if (esCorrecta) {
                boton.classList.add('opcion-correcta');
            } else {
                boton.classList.add('opcion-incorrecta');
            }

            inputRespuesta.value = numeroRespuesta;

            // Espera de 1 segundo y envío de form
            setTimeout(() => {
                formulario.submit();
            }, 1000);
        });
    });
</script>

</body>
</html>
