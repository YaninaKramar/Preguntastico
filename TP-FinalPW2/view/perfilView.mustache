<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Perfil de Usuario</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<style>
    body{
        min-height: 100vh;
        margin: 0;
        font-family: Arial, sans-serif;
    }
    .perfil-header {
        background-color: #ff6600;
        padding: 20px;
        color: white;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .perfil-info{
        display: flex;
        flex-direction: column;
    }
    .foto-perfil {
        width: 200px;
        height: 200px;
        object-fit: cover;
        border-radius: 50%;
    }
    .bg-naranja{
        background-color: #ff6600;
    }

    .bg-azul{
        background-color: #003b5c;
    }

    .boton-volver {
        left: 20px;
        top: 20px;
        background-color: red;
        color: white;
        border-radius: 20px;
        padding: 10px 20px;
        font-weight: bold;
        text-decoration: none;
        display: inline-block;
    }
</style>
<body>
<div class="perfil-header">
    <div class="perfil-info">
        <p><a href="/lobby/show" class="boton-volver">Volver al lobby</a></p>
        <h1>{{usuario.nombre_completo}}</h1>
        <h3>Puntaje total: {{puntaje_total}}</h3>
    </div>
    <div class="d-flex flex-column justify-content-center align-items-center h-100">
        <img class="foto-perfil mb-3" src="../{{usuario.foto_perfil}}" alt="Foto de perfil" />
        <p>{{usuario.fecha_nac}}</p>
    </div>
</div>

<div class="container my-5">
    <div class="row g-4">
        <!-- Columna izquierda -->
        <div class="col-md-4">
            <div class="card bg-naranja text-white mb-4">
                <div class="card-body">
                    <h4 class="card-title">Partidas jugadas</h4>
                    {{#partidas}}
                        <p class="mb-1">üìÖ {{fecha}} - üèÜ {{puntaje_final}} puntos</p>
                    {{/partidas}}
                </div>
            </div>

            <div class="card bg-naranja text-white text-center">
                <div class="card-body">
                    <h4 class="card-title">C√≥digo QR del perfil</h4>
                    <img src="{{qr_url}}" alt="QR del perfil" class="img-fluid mt-2" style="max-width: 200px;" />
                </div>
            </div>
        </div>

        <!-- Columna derecha -->
        <div class="col-md-8">
            <div class="card h-100">
                <div class="card-body bg-azul text-white">
                    <h4 class="card-title mb-4">Ubicaci√≥n en el mapa</h4>
                    <div id="map" style="height: 300px; width: 100%; border-radius: 10px; overflow: hidden;"></div>
                </div>
            </div>
        </div>
    </div>
</div>


<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.3/dist/leaflet.css"/>
<script src="https://unpkg.com/leaflet@1.9.3/dist/leaflet.js"></script>

<script>
    var latitud = {{usuario.latitud}};
    var longitud = {{usuario.longitud}};
    var map = L.map("map").setView([latitud, longitud], 13);

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png',
            {attribution: 'OpenStreetMap contributors'
            }).addTo(map);

    L.marker([latitud, longitud])
            .addTo(map)
            .bindPopup('Esta es tu ubicaci√≥n: ' + latitud + ' - ' + longitud)
            .openPopup();
</script>


</body>
</html>